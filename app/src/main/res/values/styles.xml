<resources>
    <style name="AppCompat.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>


    <style name="ShapeAppearance.Tasks.Card" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/card_corner_radius</item>
        <item name="backgroundColor">@android:color/holo_blue_bright</item>
        <item name="background">@android:color/holo_blue_dark</item>
    </style>

</resources>
