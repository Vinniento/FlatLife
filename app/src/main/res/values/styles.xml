<resources>

    <style name="AppCompat.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearance.Tasks.Card" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/card_corner_radius</item>
        <item name="android:layout_marginStart">@dimen/card_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_side_margin</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="AddButton" parent="">
        <item name="android:tint">@android:color/white</item>
        <item name="android:backgroundTint">@android:color/holo_blue_light</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Design.BottomNavigationView" parent="">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="ClickableMenuButton" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/finance_activity_balance_text_selector</item>
        <item name="backgroundTint">@drawable/finance_activity_balance_background_selector</item>
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:layout_marginEnd">16dp</item>

    </style>
</resources>