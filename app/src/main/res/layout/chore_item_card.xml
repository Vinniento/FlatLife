<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginStart="@dimen/card_side_margin"
    android:layout_marginEnd="@dimen/card_side_margin"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent">

        <CheckBox
            android:id="@+id/cb_chore_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cb_chore_completed"
            android:layout_alignBottom="@+id/cb_chore_completed"
            android:layout_toEndOf="@id/cb_chore_completed"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_chore_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cb_chore_completed"
            android:layout_alignBottom="@+id/cb_chore_completed"
            android:layout_toEndOf="@id/tv_username"
            android:ellipsize="end"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_due_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cb_chore_completed"
            android:layout_alignBottom="@+id/cb_chore_completed"
            android:layout_toEndOf="@id/tv_chore_name"
            android:ellipsize="end"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:textColor="@color/black" />




    </RelativeLayout>
</androidx.cardview.widget.CardView>
